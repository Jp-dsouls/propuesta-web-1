---
import BtnExpert from "../Btn/BtnExpert.astro";
const { src, alt, text, textColor } = Astro.props;
import { Image } from "astro:assets";
---

<div class="swiper-slide swiper-cover-item">
  <Image src={src} alt={alt} width="24" height="50" draggable="false" loading="eager"/>
  <div class="app-content-slide text-white">
    <div class="container mx-auto flex flex-col flex-nowrap items-start">
      <h1
        class="title-slide text-white text-7xl text-left mb-5 font-bold uppercase"
      >
        {text}
      </h1>
      <span class="text-yellow-300 text-7xl text-left mb-6 font-bold uppercase"
        >{textColor}</span
      >
      <div class="text-left w-72">
        <BtnExpert />
      </div>
    </div>
  </div>
</div>
<style>
  .swiper-slide {
    text-align: center;
    font-size: 18px;
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .swiper-slide img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .swiper-cover-item::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(32, 32, 32, 0.404);
  }
  .swiper-cover-item {
    width: 100%;
    height: 100%;
  }
  .swiper-cover-item img {
    object-fit: cover;
    height: 100%;
    width: 100%;
    object-position: center;
  }
  .app-content-slide {
    position: absolute;
    width: 100%;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 10;
    display: flex;
  }
</style>
