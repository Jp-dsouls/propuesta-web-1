---
import Title from "../Title/Title.astro";
import ServicesItem from "./ServicesItem.astro";
import { Image } from "astro:assets";
---

<section class="container mx-auto flex flex-col my-8">
  <main class="flex-1">
    <div class="container mx-auto">
      <Title title="Valores" />
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        <ServicesItem
          title="Integridad y seguridad"
          context="Actuamos siempre con honestidad y transparencia en todas nuestras operaciones."
        >
          <Image
            src="/icons/candado.png"
            alt="icono candado"
            width="44"
            height="48"
            draggable="false"
            loading="eager"
            class="w-11 mr-2"
          />
        </ServicesItem>
        <ServicesItem
          title="Excelencia"
          context=" Buscamos la calidad en todos los aspectos de la gestión de activos y la administración de fondos."
        >
          <Image
            src="/icons/excelencia.png"
            alt="icono excelencia"
            width="44"
            height="48"
            draggable="false"
            loading="eager"
            class="w-11 mr-2"
          />
        </ServicesItem>
        <ServicesItem
          title="Confianza"
          context="Construimos y mantenemos relaciones de confianza sólidas con nuestros inversionistas y socios."
        >
          <Image
            src="/icons/apreton.png"
            alt="icono apreton"
            width="44"
            height="48"
            draggable="false"
            loading="eager"
            class="w-11 mr-2"
          />
        </ServicesItem>
        <ServicesItem
          title="Inclusión financiera"
          context="Democratizamos el acceso a las inversiones y al financiamiento a través de propuestas innovadoras, apalancadas en la tecnología y la innovación."
        >
          <Image
            src="/icons/proteger.png"
            alt="icono proteger"
            width="44"
            height="48"
            draggable="false"
            loading="eager"
            class="w-11 mr-2"
          />
        </ServicesItem>
        <ServicesItem
          title="Sostenibilidad"
          context="Promovemos prácticas financieras sostenibles y responsables en beneficio a largo plazo de los inversionistas y el ambiente."
        >
          <Image
            src="/icons/sostenibilidad.png"
            alt="icono sostenibilidad"
            width="44"
            height="48"
            draggable="false"
            loading="eager"
            class="w-11 mr-2"
          />
        </ServicesItem>
      </div>
    </div>
  </main>
</section>
