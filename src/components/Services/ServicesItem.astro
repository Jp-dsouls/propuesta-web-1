---
const { title, src, context } = Astro.props;
---

<div
class="rounded-lg border bg-card text-card-foreground shadow-sm"
data-v0-t="card"
>
<div class="block p-6" draggable="false">
  <div class="flex items-center mb-4">
    <slot/>
    <h3 class="text-xl font-bold">{title}</h3>
  </div>
  <p class="text-muted-foreground leading-7 text-[#848484]">
    {context}
  </p>
</div>
</div>