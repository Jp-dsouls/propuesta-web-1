<style>
  .section-breadcrumbs {
    display: flex;
    flex-wrap: wrap;
    list-style: none;
    padding-top: 20px;
  }
  .breadcrumbs {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 6px;
    flex-direction: column;
  }
  .breadcrumbs a {
    display: inline-block;
    margin-right: 5px;
    font-size: 13.5px;
    font-weight: 600;
    text-decoration: none;
    transition: all ease-in-out 0.15s;
  }
</style>
<script>
  var url = window.location.href;
  var urlObj = new URL(url);
  var pathname = urlObj.pathname;
  var slug = pathname.split("/").filter(Boolean).pop() || "";

  slug = slug.replace(/-/g, " ");

  // console.log(slug);
  var slugElement = document.querySelector(".slug");
  var slugContainer = document.querySelector(".section-breadcrumbs");

  if (slug === "") {
    if (slugContainer) {
      (slugContainer as HTMLElement).style.display = "none";
    }
  } else {
    if (slugElement) {
      slugElement.textContent = slug;
    } else {
      console.error('El elemento con la clase "slug" no se encontr√≥.');
    }
  }
</script>
